<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical"
        android:weightSum="10"
        android:padding="@dimen/margin_10">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gainsboro_t">

                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_mail" />

                <Button
                    android:layout_marginBottom="@dimen/margin_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/button"
                    style="@style/App_ButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/button_35"
                    android:background="@drawable/button_round_red"
                    android:text="@string/check_in"
                    android:textSize="@dimen/txt_13"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="@dimen/size_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <TextView
                android:id="@+id/tv_title"
                style="@style/App_TextViewStyle_font_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_7"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_16" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/margin_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_50"
                android:orientation="vertical">

                <TextView
                    style="@style/App_TextViewStyle_font_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_marginBottom="@dimen/margin_5"
                    android:padding="@dimen/padding_7"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color_b"
                    android:textSize="@dimen/txt_15" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_size"
                    android:background="@color/gray_light" />

                <TextView

                    style="@style/App_TextViewStyle_font_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_mail_red"
                    android:drawablePadding="@dimen/padding_10"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_7"
                    android:paddingStart="@dimen/padding_15"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_size"
                    android:background="@color/gray_too_light" />

                <TextView

                    style="@style/App_TextViewStyle_font_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_address"
                    android:drawablePadding="@dimen/padding_10"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_7"
                    android:paddingStart="@dimen/padding_15"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_size"
                    android:background="@color/gray_too_light" />

                <TextView

                    style="@style/App_TextViewStyle_font_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_phone"
                    android:drawablePadding="@dimen/padding_10"
                    android:gravity="center_vertical"
                    android:padding="@dimen/padding_7"
                    android:paddingStart="@dimen/padding_15"
                    android:text="@string/app_name"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/txt_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view_size"
                    android:background="@color/gray_too_light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>