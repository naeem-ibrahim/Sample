<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_20"
    android:orientation="vertical"
    android:background="@color/white_smoke">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gainsboro_t"
>

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size_110"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_mail"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button"
            style="@style/App_ButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_35"
            android:layout_marginBottom="@dimen/margin_20"
            android:background="@drawable/button_round_red"
            android:text="@string/check_in"
            android:textSize="@dimen/txt_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_logo"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_weight="0.5"
        app:cardBackgroundColor="@color/red"
        app:cardCornerRadius="@dimen/size_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <TextView
            android:id="@+id/tv_title"
            style="@style/App_TextViewStyle_font_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_7"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_16" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/margin_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/size_50"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_7"
            android:text="@string/app_name"
            android:textColor="@color/text_color_b"
            android:textSize="@dimen/txt_15"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginBottom="@dimen/margin_5"
            style="@style/App_TextViewStyle_font_bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size"
            android:background="@color/gray_light"
            />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_7"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_13"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_15"
                android:drawablePadding="@dimen/padding_10"
                android:drawableStart="@drawable/ic_mail_red"
                style="@style/App_TextViewStyle_font_normal"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/gray_too_light"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_7"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_13"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_15"
                android:drawablePadding="@dimen/padding_10"
                android:drawableStart="@drawable/ic_address"
                style="@style/App_TextViewStyle_font_normal"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/gray_too_light"
                />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_7"
                android:text="@string/app_name"
                android:textColor="@color/text_color"
                android:textSize="@dimen/txt_13"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/padding_15"
                android:drawablePadding="@dimen/padding_10"
                android:drawableStart="@drawable/ic_phone"
                style="@style/App_TextViewStyle_font_normal"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_size"
                android:background="@color/gray_too_light"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
